# WAP that copies first 10 bytes of a binary file into another.

with open('test1.txt', 'rb') as file1:
    data = file1.read(10)
    with open('test2.txt', 'wb') as file2:
        file2.write(data)
file1.close()
file2.close()



#WAP that copies one python scripts into anther in such a way that all comment line are skipped and not copied in the destination file.

with open('test1.txt', 'r') as file1:
    with open('test2.txt', 'w') as file2:
        for line in file1:
            if line.startswith('#'):
                continue
            file2.write(line)



# WAP that accepts filename as an input from the user. Open the file and count the number of times 'a' character appears in the file.

filename = input("Enter filename: ")
with open(filename, 'r') as file:
        file_contents = file.read()
        count = file_contents.count('a')
        print("Number of 'a' in the file:", count)




# WAP that reads data from a file and calculates the percentage of vowels and consonants in the file.

filename = input("Enter filename: ")
vowels = ['a', 'e', 'i', 'o', 'u']
vowel_count = 0
consonant_count = 0
with open(filename, 'r') as file:
    file_contents = file.read().lower() 
    for char in file_contents:
        if char in vowels:
            vowel_count += 1
        elif char.isalpha():  
            consonant_count += 1
    total_chars = vowel_count + consonant_count
    vowel_percentage = (vowel_count / total_chars) * 100
    consonant_percentage = (consonant_count / total_chars) * 100
    print("Percentage of vowels: {f}%".format(vowel_percentage))
    print("Percentage of consonants: {f}%".format(consonant_percentage))


# WAP that counts the number of tabs, spaces, and newline character in a file.

filename = input("Enter filename: ")
tab_count = 0
space_count = 0
newline_count = 0
with open(filename, 'r') as file:
    file_contents = file.read()
    for char in file_contents:
        if char == '\t':
                tab_count += 1
        elif char == ' ':
                space_count += 1
        elif char == '\n':
                newline_count += 1
    print("Tab count:", tab_count)
    print("Space count:", space_count)
    print("Newline count:", newline_count)




# WAP that reads a file line by line. Each line read from the file is copied to another file with line numbers specified at the beginning of the line.

source_filename = input("Enter source filename: ")
destination_filename = input("Enter destination filename: ")
with open(source_filename, 'r') as file1:
    with open(destination_filename, 'w') as destination_file:
        line_number = 1
        for line in file1:
            line = line.strip()
            destination_file.write(f"{line_number}: {line}\n")
            line_number += 1
